{
  // VS Code debug configurations for handoff orchestration and FastAPI server
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: handoff.py (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "src.backend.app.handoff",
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        // Provide your Azure OpenAI settings (adjust as needed)
        // "AZURE_OPENAI_API_KEY": "${env:AZURE_OPENAI_API_KEY}",
        // "AZURE_OPENAI_ENDPOINT": "${env:AZURE_OPENAI_ENDPOINT}",
        // "AZURE_OPENAI_DEPLOYMENT": "gpt-4o-mini"
        "SK_VERBOSE": "1"
      }
    },
    {
      "name": "FastAPI (handoff orchestration)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.backend.app.main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        // Uncomment & supply correct values:
        // "AZURE_OPENAI_API_KEY": "${env:AZURE_OPENAI_API_KEY}",
        // "AZURE_OPENAI_ENDPOINT": "${env:AZURE_OPENAI_ENDPOINT}",
        // "AZURE_OPENAI_DEPLOYMENT": "gpt-4.1",
        "SK_VERBOSE": "1"
      }
    },
    {
      "name": "Attach to running Uvicorn",
      "type": "debugpy",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "justMyCode": true
    }
  ]
}
