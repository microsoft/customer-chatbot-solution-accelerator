# Backend Environment Configuration for Local Development
# Copy this file to .env and update with your actual values

# Azure Cosmos DB
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE_NAME=ecommerce-db

# Microsoft Entra ID (optional for local development)
# Leave empty to use mock authentication
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Debug Mode
DEBUG=true

# Azure AI Foundry
AZURE_FOUNDRY_ENDPOINT=
FOUNDRY_ORCHESTRATOR_AGENT_ID=
FOUNDRY_PRODUCT_AGENT_ID=
FOUNDRY_ORDER_AGENT_ID=
FOUNDRY_CUSTOMER_AGENT_ID=
FOUNDRY_KNOWLEDGE_AGENT_ID=

# Feature Flags
USE_FOUNDRY_AGENTS=false